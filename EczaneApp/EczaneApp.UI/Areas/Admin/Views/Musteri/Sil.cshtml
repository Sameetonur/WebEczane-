@using EczaneApp.EntityLayer
@model Musteri
@{
    ViewBag.Title = "Müşteri Sil";
}

<h2>Müşteri Sil</h2>

@using (Html.BeginForm("Sil", "Musteri", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label">@Model.Ad adlı müşteriyi silmek istiyor musunuz?</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Evet" class="btn btn-default" />
        @Html.ActionLink("İptal", "Listele", "Musteri", new { @class = "btn btn-danger" })
    </div>
}

