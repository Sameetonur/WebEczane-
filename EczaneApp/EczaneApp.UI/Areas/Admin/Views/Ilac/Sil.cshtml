@using EczaneApp.EntityLayer
@model Ilac
@{
    ViewBag.Title = "İlaç Sil";
}

<h2>Personel Sil</h2>

@using (Html.BeginForm("Sil", "Ilac", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label">@Model.Ad adlı ilacı silmek istiyor musunuz?</label>
    </div>
    <div class="form-group">
        <input type="submit" value="Evet" class="btn btn-default" />
        @Html.ActionLink("İptal", "Listele", "Ilac", new { @class = "btn btn-danger" })
    </div>
}

