@using EczaneApp.EntityLayer
@model Kategori
@{
    ViewBag.Title = "Kategori Ekle";
}

<h2>Kategori Ekle</h2>
<div class="row">
    @using (Html.BeginForm("Ekle", "Kategori", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.Ad, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @placeholder = "Kategori Adı" })
                @Html.ValidationMessageFor(x => x.Ad, "", new { @class = "text-danger" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    }
</div>

