@using EczaneApp.EntityLayer
@model Kullanici
@{
    ViewBag.Title = "Kullanıcı Düzenle";
}

<h2>Kullanıcı Düzenle</h2>
<div class="row">
    @using (Html.BeginForm("Duzenle", "Kullanici", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.Ad, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @placeholder = "Ad" })
                @Html.ValidationMessageFor(x => x.Ad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Sifre, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @placeholder = "Şifre" })
                @Html.ValidationMessageFor(x => x.Sifre, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Yetki, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(x => x.Yetki, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Yetki, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.DropDownListFor(x => x.PersonelId, ViewBag.Personeller as SelectList, "Personel Seçiniz", new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.PersonelId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    }
</div>

