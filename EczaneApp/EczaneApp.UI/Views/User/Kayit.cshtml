@using EczaneApp.EntityLayer
@model Kullanici
@{
    ViewBag.Title = "Kayıt Ol";
}

<h2>Kayıt Ol</h2>
<div class="row">
    @using (Html.BeginForm("Kayit", "User", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.Ad, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Personel.Ad, new { @class = "form-control", @placeholder = "Ad" })
                @Html.ValidationMessageFor(x => x.Personel.Ad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.Soyad, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Personel.Soyad, new { @class = "form-control", @placeholder = "Soyad" })
                @Html.ValidationMessageFor(x => x.Personel.Soyad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.TC, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Personel.TC, new { @class = "form-control", @placeholder = "TC", maxlength = "11" })
                @Html.ValidationMessageFor(x => x.Personel.TC, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Personel.DogumTarih, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Personel.DogumTarih, new { @class = "form-control", @placeholder = "Doğum Tarihi", type = "date" })
                @Html.ValidationMessageFor(x => x.Personel.DogumTarih, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Ad, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Ad, new { @class = "form-control", @placeholder = "Kullanıcı Adı" })
                @Html.ValidationMessageFor(x => x.Ad, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Sifre, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", @placeholder = "Şifre" })
                @Html.ValidationMessageFor(x => x.Sifre, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn btn-success" />
            </div>
        </div>
    }
</div>

